<%= form_with(model:[:admin, product],local:true) do |form| %>
  <div class="form-group">
    <%= form.label :name, for: "name" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter Product Name", id: "name" %>
  </div>
  <div class="form-group">
    <%= form.label :description, for: "description" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter Product Description", id: "description", rows: 8 %>
  </div>
  <div class="form-group">
    <%= form.label :image, for: "image" %>
    <%= form.file_field :image,  id: "image" %>
  </div>
  <div class="form-group">
    <%= form.label :stock, for: "stock" %>
    <%= form.text_field :stock, class: "form-control", placeholder: "Enter Product stock", id: "stock" %>
  </div>
  <div class="form-group">
    <%= form.label :price, for: "price" %>
    <%= form.text_field :price, class: "form-control", placeholder: "Enter Product price", id: "price" %>
  </div>
  <div class="form-group">
    <%= form.label :size, for: "size" %>
    <%= form.text_field :size, class: "form-control", placeholder: "Enter Product size", id: "size" %>
  </div>
  <div class="form-group">
    <%= form.label :online, for: "online" %><br>
    <%= form.check_box :online, id: "online", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :status, for: "status" %><br>
    <%= form.check_box :status, id: "status", class: "form-control" %>
  </div>
  <%= form.submit class: "btn btn-primary" %>
<% end %>


