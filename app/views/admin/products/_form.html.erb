<%= form_with(model:product,local:true) do |form| %>
  <div class="form-group">
    <%= form.label :name, for: "name" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter Product Name", id: "name" %>
  </div>
  <div class="form-group">
    <%= form.label :description, for: "description" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter Product Description", id: "description", rows: 8 %>
  </div>
  <%= form.submit class: "btn btn-primary" %>
<% end %>



