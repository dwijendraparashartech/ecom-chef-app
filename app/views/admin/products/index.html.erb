    <div class="row">
    <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Chef</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Image</th>
        <th scope="col">Status</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
            <tr>
              <th scope="row"><%= product.id %></th>
              <td><%= product.user.try(:email) %></td>
              <td><%= product.name %></td>
              <td><%= product.description %></td>
              <td><%= image_tag product.get_image_url, width: '100', height: '100' %></td>
              <td><%= product.status ? 'Approved' : 'Pending' %></td>
              <td><a href="/admin/products/<%= product.id %>">View</a></td>
              <td><%= link_to "Marked As Approved", admin_product_path(product.id), method: :put %></td>
            </tr>
        <% end %>
        
    </tbody>
    </table>
    </div>
